{
  "version": 2,
  "rewrites": [
    { "source": "/api/menu", "destination": "/api/menu.js" },
    { "source": "/api/schedule.json", "destination": "/api/schedule.json" },
    { "source": "/api/schedule", "destination": "/api/schedule.js" },
    { "source": "/api/photos", "destination": "/api/photos.js" },
    { "source": "/api/stats", "destination": "/api/stats.js" },
    { "source": "/api/upload", "destination": "/api/upload.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}
